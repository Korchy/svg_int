<?php
//---------------------------------------------------------------------------------------------------------------------
// SVG autoload
//---------------------------------------------------------------------------------------------------------------------
spl_autoload_register(
    function($classname) {
        $classpath = __DIR__
            .(substr(__DIR__, -1) != DIRECTORY_SEPARATOR ? DIRECTORY_SEPARATOR : '')
            .str_replace('\\', DIRECTORY_SEPARATOR, $classname)
            .'.inc.php';
        if(file_exists($classpath)) {
            require_once($classpath);
        }
    }
);
//---------------------------------------------------------------------------------------------------------------------
?>
